<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <title>Danh sách tài khoản</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
</head>
<body class="p-4">
  <h2>Danh sách tất cả tài khoản</h2>
  <table class="table table-bordered table-striped">
    <thead class="table-dark">
      <tr>
        <th>Mã</th>
        <th>Họ tên</th>
        <th>SĐT</th>
        <th>Email</th>
        <th>CCCD</th>
        <th>Vai trò</th>
        <th>Thao tác</th>
      </tr>
    </thead>
    <tbody>
      <% if (TaiKhoan.length === 0) { %>
  <tr><td colspan="7" class="text-center">Chưa có tài khoản nào</td></tr>
<% } else { %>
  <% TaiKhoan.forEach(tk => { %>
    <tr>
      <td><%= tk.ID %></td>
      <td><%= tk.HoTen %></td>
      <td><%= tk.SDT %></td>
      <td><%= tk.Gmail %></td>
      <td><%= tk.CCCD %></td>
      <td><%= tk.TenVaiTro %></td>
      <td>
        <a href="/xemchitietnhanvien/<%= tk.ID %>" class="btn btn-primary btn-sm">Xem chi tiết</a>
      </td>
    </tr>
  <% }) %>
<% } %>
    </tbody>
    <tr><a href="/register" class="btn btn-primary btn-sm">Tạo tài khoản nhân viên mới</a></tr>
  </table>
</body>
</html>
