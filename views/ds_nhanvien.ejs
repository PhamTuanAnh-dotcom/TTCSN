<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <title>Danh sách nhân viên</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
</head>
<body class="p-4">
  <h2>Danh sách nhân viên</h2>
  <table class="table table-bordered table-striped">
    <thead class="table-dark">
      <tr>
        <th>Mã NV</th>
        <th>Họ tên</th>
        <th>SĐT</th>
        <th>Email</th>
        <th>Thao tác</th>
      </tr>
    </thead>
    <tbody>
      <% nhanviens.forEach(nv => { %>
        <tr>
          <td><%= nv.ID %></td>
          <td><%= nv.HoTen %></td>
          <td><%= nv.SDT %></td>
          <td><%= nv.Email %></td>
          <td>
            <a href="/staff/<%= nv.ID %>" class="btn btn-primary btn-sm">Xem chi tiết</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
