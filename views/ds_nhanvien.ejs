<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <title>Danh sách tài khoản</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
  <style>
    body {
      background-color: #f8f9fa;
      font-family: "Segoe UI", sans-serif;
    }
    h2 {
      text-align: center;
      margin-bottom: 25px;
      margin-top: 20px;
      font-weight: bold;
      color: #333;
    }
    .action-bar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin: 0 auto 15px;
      max-width: 950px;
    }
    .btn {
      border-radius: 8px;
      font-weight: 600;
    }
    table {
      background-color: #fff;
    }
    footer {
      text-align: center;
      color: #666;
      font-size: 14px;
      margin-top: 30px;
    }
  </style>
</head>
<body class="p-4">

  <h2><i class="bi bi-people-fill"></i> Danh sách tất cả tài khoản</h2>

  <div class="action-bar">
    <div>
      <a href="/home_ql" class="btn btn-secondary"><i class="fa-solid fa-house"></i> Về trang chủ</a>
      <a href="/auth/register" class="btn btn-success"><i class="fa-solid fa-user-plus"></i> Tạo tài khoản mới</a>
    </div>
  </div>

  <div class="container mt-3">
    <table class="table table-bordered table-striped shadow-sm">
      <thead class="table-dark text-center">
        <tr>
          <th>Mã</th>
          <th>Họ tên</th>
          <th>SĐT</th>
          <th>Email</th>
          <th>CCCD</th>
          <th>Vai trò</th>
          <th>Thao tác</th>
        </tr>
      </thead>
      <tbody class="align-middle text-center">
        <% if (TaiKhoan.length === 0) { %>
          <tr>
            <td colspan="7" class="text-center text-muted">Chưa có tài khoản nào</td>
          </tr>
        <% } else { %>
          <% TaiKhoan.forEach(tk => { %>
            <tr>
              <td><%= tk.ID %></td>
              <td><%= tk.HoTen %></td>
              <td><%= tk.SDT %></td>
              <td><%= tk.Gmail %></td>
              <td><%= tk.CCCD %></td>
              <td><%= tk.TenVaiTro %></td>
              <td>
                <a href="/staff/xemchitietnhanvien/<%= tk.ID %>" class="btn btn-primary btn-sm">
                  <i class="fa-solid fa-eye"></i> Xem
                </a>
              </td>
            </tr>
          <% }) %>
        <% } %>
      </tbody>
    </table>
  </div>

  <footer>
    © 2025 Nhà hàng Siêu Cấp VIP PRO
  </footer>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/js/all.min.js"></script>
</body>
</html>
