<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <title>Thêm món ăn</title>
</head>
<body>
  <h2 style="text-align:center;">Thêm món ăn</h2>
  <form action="/menu/them" method="POST" style="width:300px;margin:auto;">
    <label>Mã món:</label><br>
    <input name="MaMon" required><br>
    <label>Tên món:</label><br>
    <input name="TenMon" required><br>
    <label>Loại:</label><br>
    <select name="MaLoai">
      <option value="">-- Chọn loại --</option>
      <% loai.forEach(l => { %>
        <option value="<%= l.MaLoai %>"><%= l.TenLoai %></option>
      <% }) %>
    </select><br>
    <label>Giá bán:</label><br>
    <input type="number" step="0.01" name="GiaBan" required><br>
    <label>Trạng thái:</label><br>
    <select name="TrangThai">
      <option value="Con">Còn</option>
      <option value="Het">Hết</option>
    </select><br><br>
    <button type="submit">Lưu</button>
    <a href="/menu">Hủy</a>
  </form>
</body>
</html>
